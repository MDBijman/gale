module euler1
import [std std.io]

let sum : std.i32 = 0;

let x : std.i32 = 1000;
while (x > 1) {
	x = x - 1;

	let y : std.i32 = x % 5;
	let z : std.i32 = x % 3;

	if (y == 0) {
		sum = sum + x;
	};

	y match {
		| y == 0 -> { sum = sum + x; }
		| 1 == 1 -> z match {
			| z == 0 -> { sum = sum + x; }
			| 1 == 1 -> { sum = sum + 0; }
		}
	};
};

std.io.println std.to_string sum;